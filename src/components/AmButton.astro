---
// Button.astro
interface Props {
  fontSize?: string; // Optional font size
}

const { fontSize } = Astro.props;
---

<button class="custom-button me-auto" style={{ fontSize: fontSize ?? '1rem' }}>
  <div class="before-styles"></div>
  <slot name="icon-start" />
  <slot />
  <slot name="icon-end" />
</button>

<style lang="less" >
  .custom-button {
    --text-color: black;
    --background-color: var(--primary); /* Use the CSS variable */
    --icon-color: white;

    background-color: var(--background-color);
    color: var(--text-color);
    border:2px solid var(--background-color);
    width: max-content;
    font-size: 1rem; /* Default font size, overridden by prop */
    padding: 0.35em 1.5em;

    border: none;
    border-radius: 25em;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    isolation: isolate;
    gap: 0.25em;

    &::before {
        content: '';
        position: absolute;
        inset: 0;margin:auto;
        transform: scale(0);
        width: 2em;
        height: 2em;
        border-radius: 50%;
        background-color: rgb(38, 38, 38);

        transform-origin: center;
        transition: all 250ms ease-in-out;
        z-index: -1; /* Ensure it's behind the content */
    }
    &:hover::before {
        transform: scale(6);

    }

    &:hover {
      --text-color: white; /* White text on hover */
      color: var(--text-color);
    }



    ::slotted([slot="icon-start"]),
    ::slotted([slot="icon-end"]) {
      fill: var(--icon-color);
      width: 1em;
      height: 1em;
      z-index: 1; /* Ensure icons are above the circle */
    }

    svg {
      z-index: 1; /* Ensure icons are above the circle */
    }
  }

</style>